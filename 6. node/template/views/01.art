<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<!-- 标准语法 -->
	<!-- {{name}}
	{{age}} -->

	<p>{{ name }}</p>
	<p>{{ 1+1 }}</p>
	<p>{{ 1 + 1 == 2 ? '=': '!='}}</p>

	<p>{{ content }}</p>
	<p>{{ @content }}</p>

	<!-- 原始语法 -->
	<p><%=name %></p>
	<p><%= 1 + 2 %></p>
	<p><%= 1 + 1 == 2 ? '=': '!=' %></p>

	<p><%=content %></p>
	<p><%-content %></p>
</body>
</html>
 